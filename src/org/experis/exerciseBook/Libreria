try (PrintWriter writer = new PrintWriter(new FileWriter("libri.txt"))) {
            for (Book book : books) {
                writer.println("Titolo: " + book.getTitle());
                writer.println("Numero di pagine: " + book.getNumPages());
                writer.println("Autore: " + book.getAuthor());
                writer.println("Editore: " + book.getPublisher());
                writer.println(); // Blank line between books
            }
        } catch (IOException e) {
            System.out.println("Errore durante la scrittura su file: " + e.getMessage());
        }